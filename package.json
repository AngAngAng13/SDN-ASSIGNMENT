  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:client": "webpack --mode=production",
    "build:server": "tsc",
    "build": "npm run build:server && npm run build:client && npm run build:css && npm run copy-assets",
    "copy-assets": "cpx \"src/{views,public}/**/*\" dist",
    "build:css": "npx @tailwindcss/cli -i src/public/stylesheets/style.css -o src/public/stylesheets/output.css",
    "watch:css": "npx @tailwindcss/cli -i src/public/stylesheets/style.css -o src/public/stylesheets/output.css --watch",
    "watch:client": "webpack --watch",
    "start:server": "npx tsx watch --env-file .env src/app.ts",
    "dev": "concurrently \"npm:watch:client\" \"npm:start:server\" \"npm:watch:css\"",
    "start": "node --env-file .env dist/app.js"
  },
