<!DOCTYPE html>
<html lang="en">
<head>
       <link rel="stylesheet" href="/stylesheets/output.css" />
</head>
<body class="bg-base-200">
  <%- include('../shares/_topbar') %>

  <main class="container mx-auto p-4 lg:p-6">
    <div class="space-y-6">
      <div class="text-center">
        <h1 class="text-3xl font-bold">Members Management</h1>
         <p class="text-base-content/60 mt-2">View and manage all registered members</p>
      </div>

      <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
        <div class="stat">
          <div class="stat-title">Total Members</div>
          <div class="stat-value text-primary"><%= members.length %></div>
        </div>
         <div class="stat">
          <div class="stat-title">Administrators</div>
          <div class="stat-value text-accent"><%= members.filter(m => m.isAdmin).length %></div>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Joined</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% members.forEach(member => { %>
                            <tr>
                                <td>
                                    <div class="font-bold"><%= member.name %></div>
                                    <div class="text-sm opacity-50">YOB: <%= member.YOB %></div>
                                </td>
                                <td><span class="font-mono text-sm bg-base-200 px-2 py-1 rounded"><%= member.membername %></span></td>
                                <td>
                                    <% if (member.isAdmin) { %>
                                        <div class="badge badge-accent">Admin</div>
                                    <% } else { %>
                                        <div class="badge badge-ghost">Member</div>
                                    <% } %>
                                </td>
                                <td><%= new Date(member.createdAt).toLocaleDateString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
  </main>
  
  <script src="/javascripts/bundle.js"></script>
</body>
</html>